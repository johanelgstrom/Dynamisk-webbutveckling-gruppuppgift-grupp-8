<h2 class="read-post-title">{{title}}</h2>
 
<img class="post-bild" src="{{imgUrl}}">

{{#if comments}}
    {{#each comments}}
        <div class="comment-container">
            <p>{{description}}</p>
            <p>{{formateDate time}}</p>
        </div>
    {{/each}}
{{/if}}

<p class="post-content">{{content}}</p>
<form action="/posts/read-post/{{_id}}/comment" method="post" class="post-comment">
    <textarea name="comment" id="" cols="30" rows="10" required></textarea>
    <input type='submit' value="Post comment" class="commentbtn">
</form>

<a href="/posts/{{_id}}/edit">edit post</a>
<a href = "/posts/{{_id}}/delete">delete post</a>
